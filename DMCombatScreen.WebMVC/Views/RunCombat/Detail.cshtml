@model IEnumerable<DMCombatScreen.Models.RunCombatDetail>

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CombatID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Character.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentHP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CombatID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Character.Name)
        </td>
        @if (!item.Character.IsPlayer)
        {
            <td>
                @Html.DisplayFor(modelItem => item.CurrentHP)
            </td>
        }
        else
        {
            <td></td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
