@model IEnumerable<DMCombatScreen.Models.RunCombatListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Combat")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CombatID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Combat.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CombatID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Combat.Name)
        </td>
        <td>
            @Html.ActionLink("Roll Initiative", "RollInitiative", new { id=item.CombatID }) |
            @Html.ActionLink("See Combatants", "Detail", new { id=item.CombatID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) |
            @Html.ActionLink("Run Combat", "RunCombat", new { id=item.CombatID })
        </td>
    </tr>
}

</table>
