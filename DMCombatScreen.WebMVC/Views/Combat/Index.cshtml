@model IEnumerable<DMCombatScreen.Models.CombatListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Combats</h2>

<p>
    @Html.ActionLink("Create New Combat", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CombatID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CombatID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CombatID }) |
                    @Html.ActionLink("Add Characters", "CreateMultiple", "Attendance", new { id = item.CombatID }, null) |
                    @Html.ActionLink("Details", "Details", new { id = item.CombatID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CombatID })
                </td>
                <td>
                    @Html.ActionLink("Run Combat", "RollInitiative", "RunCombat", new { id = item.CombatID }, null)
                </td>
            </tr>
        }

    </table>
</div>
